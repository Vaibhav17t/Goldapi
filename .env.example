# .env.example
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://postgres:password123@localhost:5432/goldtrading
DB_HOST=localhost
DB_PORT=5432
DB_NAME=goldtrading
DB_USER=postgres
DB_PASSWORD=password123

# OpenAI Configuration (REQUIRED for API 1)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# API Configuration
API1_PORT=3001
API2_PORT=3002
JWT_SECRET=your-super-secret-key-change-this-in-production
SESSION_TIMEOUT=3600

# Gold Price Configuration
GOLD_PRICE_PER_GRAM=10500
CURRENCY=INR

# Environment
NODE_ENV=development

# API URLs (for cross-API communication)
API1_URL=http://localhost:3001
API2_URL=http://localhost:3002

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
PURCHASE_RATE_LIMIT_MAX=10

# Logging
LOG_LEVEL=info

# Optional: External Services
# GOLD_PRICE_API_KEY=your-gold-price-api-key
# PAYMENT_GATEWAY_KEY=your-payment-gateway-key
